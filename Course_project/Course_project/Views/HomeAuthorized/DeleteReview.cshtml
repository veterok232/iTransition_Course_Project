@model Course_project.ViewModels.HomeAuthorized.DeleteReviewViewModel
@{
    ViewData["Title"] = "Delete review";
}

@section NavbarUserNickname
{
    @if (User.Identity.IsAuthenticated)
    {
        await Html.RenderPartialAsync("~/Views/Account/Partial/_LoginRegisterAuthorized.cshtml", Model.UserNickname);
    }
    else
    {
        await Html.RenderPartialAsync("~/Views/Account/Partial/_LoginRegisterUnauthorized.cshtml");
    }
}

<div class="container">
    <div class="row justify-content-center mb-4">
        <div class="col align-self-center">
            <h2 class="h2">Delete review</h2>
        </div>
    </div>
    <form class="form-horizontal" method="post" asp-controller="HomeAuthorized" asp-action="DeleteReview" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row">
            <p>Are you sure to delete the review?</p>
        </div>
        <div class="form-group row">
            <div class="col">
                <input class="btn btn-success" type="submit" asp-route-reviewId="@Model.ReviewId" value="Yes" />
                <input class="btn btn-danger" type="submit" asp-route-reviewId="" value="No" />
            </div>
        </div>
    </form>
</div>