@model Course_project.ViewModels.Account.RegisterViewModel
@{
    ViewData["Title"] = "Sign up";
}

<div class="container">
    <div class="row justify-content-center mb-4">
        <div class="col align-self-center">
            <h2 class="h2">Sign up</h2>
        </div>
    </div>
    <form class="form-horizontal" method="post" asp-controller="Account" asp-action="Register">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group row align-items-center">
            <label class="col-2 control-label" asp-for="Login">Login</label>
            <div class="col-4">
                <input class="form-control" placeholder="Input login" autocomplete="off" type="text" asp-for="Login" />
            </div>
            <div class="col-6">
                <span asp-validation-for="Login"></span>
            </div>
        </div>
        <div class="form-group row align-items-center">
            <label class="col-2 control-label" asp-for="Nickname">Nickname</label>
            <div class="col-4">
                <input class="form-control" placeholder="Input nickname" autocomplete="off" type="text" asp-for="Nickname" />
            </div>
            <div class="col-6">
                <span asp-validation-for="Nickname"></span>
            </div>
        </div>
        <div class="form-group row align-items-center">
            <label class="col-2 control-label" asp-for="Email">E-mail</label>
            <div class="col-4">
                <input class="form-control" placeholder="Input e-mail" autocomplete="off" type="email" asp-for="Email" />
            </div>
            <div class="col-6">
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="form-group row align-items-center">
            <label class="col-2 control-label" asp-for="Password">Password</label>
            <div class="col-4">
                <input class="form-control" placeholder="Input password" autocomplete="off" type="password" asp-for="Password" />
            </div>
            <div class="col-6">
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="form-group row align-items-center">
            <label class="col-2 control-label" asp-for="PasswordConfirm">Confirm password</label>
            <div class="col-4">
                <input class="form-control" placeholder="Confirm password" autocomplete="off" type="password" asp-for="PasswordConfirm" />
            </div>
            <div class="col-6">
                <span asp-validation-for="PasswordConfirm"></span>
            </div>
        </div>
        <div class="form-group row align-items-center">
            <div class="col-2"></div>
            <div class="col-10">
                <input class="btn btn-primary" type="submit" value="Register" />
            </div>
        </div>
    </form>
</div>